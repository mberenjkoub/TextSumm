    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
// TODO add your handling code here:
         Summarizer s=new Summarizer();
         DOCRead doc=new DOCRead();
          try{
           if(jComboBox1.getSelectedIndex()==1)
         {
             TotalDocumentFrequencyParser tdp=new TotalDocumentFrequencyParser();
              output=tdp.parsing_Words(doc.text);
         }
           else if(jComboBox1.getSelectedIndex()==0)
           {
               absDOCParser abs=new absDOCParser();
                output=abs.parsing_Words(doc.text);

           }
          DOCWriter dc=new DOCWriter();
        dc.writer(output);

        Parser p=new Parser();
        p.writer(output);
            Desktop.getDesktop().open(new File("e://summary.doc"));


        } catch (IOException e) {
            System.out.println(e.getMessage());
        }
          try {
            Desktop.getDesktop().open( new File(s.filename) );
        } catch ( Exception /* IOException, URISyntaxException */ e ) {
            e.printStackTrace();
        }

    }//GEN-LAST:event_jButton4ActionPerformed

